<div class="card-body">
  {{#if model.deployments.length}}
    <div class="row">
      <div class="col-12 col-md-6 mb-3">
        <div class="card">
          <div class="card-header font-weight-bold text-center">Activity For All Emails</div>
          <div class="card-body">
            {{lead-report/charts/email-activity totals=model.totals.metrics count=model.deployments.length}}
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6 mb-3">
        <div class="card">
          <div class="card-header font-weight-bold text-center">Lead Acquisition Share</div>
          <div class="card-body">
            <div class="table-responsive">
              {{lead-report/charts/lead-acquisition deployments=model.deployments totalIdentityCount=model.totals.identities}}
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col mt-2">
        <h5>Statistics per Email</h5>
        <div class="table-responsive">
          {{lead-report/tables/email-metrics
            displayDeliveredMetrics=campaign.email.displayDeliveredMetrics
            deployments=model.deployments
            totals=model.totals
            sortBy=sortBy
            ascending=ascending
            class="mb-0"
            showAdvertiserCTOR=showAdvertiserCTOR
            showTotalAdClicksPerDay=showTotalAdClicksPerDay
          }}
        </div>
      </div>
    </div>
  {{else}}
    <h5 class="mb-0">No email deployments found for this campaign.</h5>
  {{/if}}
</div>
<div class="card-footer text-right">
  {{lead-report/tables/column-toggle key="showAdvertiserCTOR" label="Advertiser CTOR" toggleState=showAdvertiserCTOR}}
  {{lead-report/tables/column-toggle key="showTotalAdClicksPerDay" label="Total Ad Clicks per Day" toggleState=showTotalAdClicksPerDay}}
  <a class="btn btn-success" role="button" href="/export/campaign/{{campaign.hash}}/email/metrics">{{entypo-icon "download"}} Export Email Metrics</a>
</div>
