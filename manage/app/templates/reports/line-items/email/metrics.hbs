<div class="card-body">
  {{#if model.deployments.length}}
    <div class="row">
      <div class="col-12 col-md-6 mb-3">
        <div class="card">
          <div class="card-header font-weight-bold text-center">Activity For All Emails</div>
          <div class="card-body">
            {{lead-report/charts/email-activity totals=model.totals.metrics count=model.deployments.length}}
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6 mb-3">
        <div class="card">
          <div class="card-header font-weight-bold text-center">Lead Acquisition Share</div>
          <div class="card-body">
            <div class="table-responsive">
              {{lead-report/charts/lead-acquisition deployments=model.deployments totalIdentityCount=model.totals.identities}}
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col mt-2">
        <h5>Statistics per Email</h5>
        <div class="table-responsive">
          {{lead-report/tables/email-metrics
            deployments=model.deployments
            totals=model.totals
            sortBy=sortBy
            ascending=ascending
            class="mb-0"
            displayAdditionalColumns=displayAdditionalColumns
          }}
        </div>
      </div>
    </div>
  {{else}}
    <h5 class="mb-0">No email deployments found for this line item.</h5>
  {{/if}}
</div>
<div class="card-footer text-right">
  {{#if displayAdditionalColumns}}
    <a class="btn btn-info" role="button" href="/app/reports/line-items/{{lineItemHash}}/email">{{entypo-icon "circle-with-cross"}} Hide Additional Columns</a>
  {{else}}
     <a class="btn btn-info" role="button" href="/app/reports/line-items/{{lineItemHash}}/email?displayAdditionalColumns=true">{{entypo-icon "check"}} Display Additional Columns</a>
  {{/if}}
  <a class="btn btn-success" role="button" href="/export/line-item/{{lineItemHash}}/email/metrics">{{entypo-icon "download"}} Export Email Metrics</a>
</div>
